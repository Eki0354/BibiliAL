{
  "manifest_version": 2,
  "name": "Bilibili AL",
  "version": "0.1.10",
  "description": "Bilibili AL",
  "icons": {
    "48": "icons/monkey_48.ico"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "js/common/cookie.js",
      "js/common/fetch.js",
      "js/common/api.js",
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.bilibili.com/*"
      ],
      "css": [
        "css/common.css"
      ],
      "js": [
        "js/common/storage.js",
        "js/common/cookie.js",
        "js/common/fetch.js",
        "js/common/api.js",
        "js/constant.js",
        "js/al.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://www.bilibili.com/",
        "*://www.bilibili.com/?*",
        "*://www.bilibili.com/#*"
      ],
      "css": [
        "css/home.css"
      ],
      "js": [
        "js/home/constant.js",
        "js/home/content_scripts.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://www.bilibili.com/video/*"
      ],
      "js": [
        "js/common/ajax.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://www.bilibili.com/video/*"
      ],
      "css": [
        "css/video.css"
      ],
      "js": [
        "js/video/api.js",
        "js/video/constant.js",
        "js/video/content_scripts.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://www.bilibili.com/v/*"
      ],
      "js": [
        "js/channelMenu/content_scripts.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://space.bilibili.com/*/fans/follow*"
      ],
      "css": [
        "css/follow.css"
      ],
      "js": [
        "js/follow/constant.js",
        "js/follow/api.js",
        "js/follow/content_scripts.js"
      ],
      "run_at": "document_idle"
    }
  ]
}